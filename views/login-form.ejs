<h1>Log In To Members Club</h1>
<form method="POST">
  <label for="email">Email:</label>
  <input
    name="email"
    id="email"
    type="email"
    value="<%= locals.userForRerender?.email ? userForRerender.email : '' %>"
  />
  <label for="password">Password:</label>
  <input name="password" id="password" type="password" />
  <button type="submit">Log in</button>
</form>

<% if (locals.errors) { %>
<div class="errors-container">
  <% errors.forEach((err) => { %>
  <li><%= err.msg %></li>
  <% }) %>
</div>
<% } %>
