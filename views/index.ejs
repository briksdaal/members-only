<% if (locals.user?.isMember) { %>
<div class="new-message-container">
  <a href="/messages/create">+ Create New Message</a>
</div>
<% } %>
<h1>Messages</h1>
<% if (locals.message_list) { %>
<div class="all-messages-container">
  <% message_list.forEach((message) => { %>
  <div class="single-message-container">
    <div class="message-data">
      <h3><%= message.title %></h3>
      <p><%- message.content.replaceAll('\r\n', '<br />') %></p>
      <% if (locals.user?.isMember) { %>
      <div class="author-and-date">
        <h4><%= message.by.fullname %></h4>
        <h4><%= message.ddmmyy_dateBought %></h4>
      </div>
      <% } %>
    </div>
    <% if (locals.user?.admin) {%>
    <div class="delete-message-container">
      <a href="<%= message.deleteurl %>">Delete Message</a>
    </div>
    <% } %>
  </div>
  <% }) %>
</div>
<% } %>
