<h1>Create New Message</h1>
<form method="POST">
  <label for="title">Title:</label>
  <input
    name="title"
    id="title"
    type="text"
    value="<%= locals.messageForRerender?.title ? messageForRerender.title : '' %>"
  />
  <label for="content">Content:</label>
  <textarea name="content" id="content" cols="30" rows="10">
<%- locals.messageForRerender?.content ? messageForRerender.content : '' %></textarea
  >
  <button type="submit">Create New Message</button>
</form>

<% if (locals.errors) { %>
<div class="errors-container">
  <% errors.forEach((err) => { %>
  <li><%= err.msg %></li>
  <% }) %>
</div>
<% } %>
